<p id="notice"><%= notice %></p>
<div class="container" id="post-index">
  <div class="row">
    <% if @posts.count > 0 %>
    <div class="col-md-12">
      <h1>Blog Posts</h1>
    </div>
    <% @posts.each do |post| %>
    <div class="col-md-6 col-md-offset-3">
      <div class="post-panel">
        <h4><%= post.title %></h4>
        <p><%= post.body %></p>
        <div class="links">
          <hr>
          <%= link_to 'Edit <i class="fa fa-pencil"></i>'.html_safe, edit_post_path(post) %>
          <%= link_to 'Delete <i class="fa fa-trash"></i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>
    <% else %>
      <%= render 'posts/emptyblog' %>
    <% end %>
  </div>
  <hr>
  <div class="col-md-12 post-links">
    <%= link_to 'New Post', new_post_path, class: "btn btn-primary new-post" %>
  </div>
</div>
