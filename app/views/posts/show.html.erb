<p id="notice"><%= notice %></p>
<div class="container" id="post-show">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="showpost-panel">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
      <p>
        <strong>Body:</strong>
        <%= @post.body %>
      </p>

        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
      </div>
    </div>
  </div>
</div>
