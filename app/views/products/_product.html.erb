  <p class="product-title"><%= product.name %></p>
  <p><%= product.description %></p>
  <div class="show-index-thumbnail">
    <%= image_tag product.picture.url, class: "product-thumbnail" %>
  </div>
  <hr>
  <div class="show-index-price">
    <p> <%= number_to_currency(product.price) %></p>
  </div>
  <div class="show-index-rating">
    <p>Average Rating: <div class="rated" data-score="<%= product.average_rating %>"></div></p>
  </div>
  <hr>
  <div class="show-index-links">
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'Detailed View <i class="fa fa-eye"></i>'.html_safe, product %>
      <%= link_to 'Edit <i class="fa fa-pencil"></i>'.html_safe, edit_product_path(product) %>
      <%= link_to 'Delete <i class="fa fa-trash"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
      <%= link_to 'Detailed view <i class="fa fa-eye"></i>'.html_safe, product %>
    <% end %>
  </div>
