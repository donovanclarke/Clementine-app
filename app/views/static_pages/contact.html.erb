<h1>Contact Us</h1>
<div class="container" id="contact-page">
  <p>We can be reached by telephone, Mon - Fri : 9am - 6:30pm. @ 917-681-3936</p>
</div>

  <%= flash[:notice] %>

  <%= bootstrap_form_tag url: "/static_pages/thank_you" do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= form.text_field :name, placeholder: "Enter name" %>
          <%= form.text_field :email, placeholder: "Enter email" %>
          <%= form.text_area :message, placeholder: "Enter message", style: "resize:none", rows: "5", cols: "40" %>
        </div>
        <%= form.submit "Send", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-md-4">
      </div>
    </div>
  </div>
