<% if notice %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert %>
  <p id="alert" class="alert alert-info"><%= alert %></p>
<% end %>
<div class="container">
  <div class="row">
    <% if @products.count > 0 %>
      <div class="col-md-6">
        <h2>Featured Product</h2>
        <div class="container" id="carousel">
          <div id="carousel-landing-page" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->

            <ol class="carousel-indicators">
              <% @products.each do |product| %>
                <li data-target="#carousel-landing-page" data-slide-to="0" class="<%= "active" if product == @products.first %>"></li>
              <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% @products.each do |product| %>
                <div class="item<%= " active" if product == @products.first %>">
                  <%= image_tag(product.picture.url) %>
                  <div class="carousel-caption">
                    <%= product.name %>
                  </div>
                </div>
              <% end %>

            <!-- Controls -->
              <a class="left carousel-control" href="#carousel-landing-page" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-landing-page" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-md-6"></div>
    <% end %>
    <% if @posts.count > 0 %>
      <div class="col-md-6">
        <h2>News</h2>
        <% @posts.reverse_each do |post| %>
          <div class="news-container">
            <p class="news-title"><%= post.title %></p>
            <p class="news-time">Posted @ <%= post.created_at.strftime("%b %d, %Y") %> <%= post.created_at.strftime("at %I:%M%p") %></p>
            <hr>
            <p class="news-body"><%= post.body %></p>
          </div>
        <% end %>
      </div>
      <% else %>
        <div class="col-md-6"></div>
      <% end %>
    </div>
  </div>
