<div class="container-fluid" id="registration-page">
  <h2>Sign up</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-4" id="new-registration">
      <div class="col-sm-12" id="sign-in-logo">
        <%= image_tag "sitelogo.png" %>
      </div>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-default devise-signup form-control" %>
        </div>
        <% end %>
      </div>
      <%= render "devise/shared/signup" %>
    </div>
  </div>
